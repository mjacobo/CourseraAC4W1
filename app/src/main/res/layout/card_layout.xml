<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CarrouselCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_padding"
    card_view:cardCornerRadius="@dimen/card_radius"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/card_padding"
        android:background="@color/colorIconsText"
        >

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/acivPetPicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/pig"
            />

        <LinearLayout
            android:id="@+id/llCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/border"
            >
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal"
                >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="fill_horizontal"
                android:layout_column="0"
                >

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/acivWhiteBone"
                android:layout_width="@dimen/bone_size"
                android:layout_height="@dimen/bone_size"
                android:background="@mipmap/ic_bone"
                android:layout_gravity="center"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/actvPetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_demo_text"
                android:textSize="@dimen/card_text_size"
                android:gravity="start"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorAccent"
                />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/llCard2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_column="1"
                >

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/actvLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_demo_text"
                android:textSize="@dimen/card_text_size"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorAccent"
                />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/acivYellowBone"
                android:layout_width="@dimen/bone_size"
                android:layout_height="@dimen/bone_size"
                android:src="@mipmap/ic_bone_yellow"
                android:layout_gravity="right"
                />
        </LinearLayout>

            </GridLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>